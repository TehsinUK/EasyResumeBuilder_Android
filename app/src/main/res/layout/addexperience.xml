    <RelativeLayout
        android:id="@+id/Adda2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ad"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cacheColorHint="@android:color/transparent"
                    android:scrollbarAlwaysDrawVerticalTrack="true" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Adda1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/barheight"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Add"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/barheight"
                    android:background="@drawable/selector_text_btn"
                    android:gravity="center"
                    android:minHeight="35dp"
                    android:text="@string/add_more"
                    android:textColor="#a2a2a2"
                    android:textSize="@dimen/textView1_1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/barheighttitle"
            android:background="@drawable/sub_title"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textviewpersonal2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical"
                android:text="@string/organization"
                android:textColor="@android:color/white"
                android:textSize="@dimen/bar_textsize" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <include
            android:id="@+id/adView"
            layout="@layout/adxml"
            android:visibility="gone" />
    </LinearLayout>

